<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous" defer></script>
        <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/2.0.0/uicons-brands/css/uicons-brands.css'>
        <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/2.0.0/uicons-regular-rounded/css/uicons-regular-rounded.css'>
        <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,100;9..40,200;9..40,300;9..40,400;9..40,500;9..40,600;9..40,700;9..40,800;9..40,900;9..40,1000&display=swap" rel="stylesheet">        {% block stylesheets %}
        <style>
            body {
    background: rgb(255,226,227);
background: linear-gradient(310deg, rgba(255,226,227,1) 0%, rgba(245,245,255,1) 35%, rgba(255,189,254,1) 100%);
    background-attachment: fixed;
    background-repeat: no-repeat;
    background-size: cover;
            }

            .navstyle {
/* From https://css.glass */
background: rgba(255, 255, 255, 0.45);
box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
backdrop-filter: blur(5px);
-webkit-backdrop-filter: blur(5px);
border: 1px solid rgba(255, 255, 255, 0.3);
            }

            * {
                font-family: 'DM Sans', sans-serif;
                
            }
        </style>
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
   <body>
        <nav class="navbar navbar-expand-lg navstyle">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="{{ path('app_accueil') }}">UrbanChic</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_accueil') }}"> Home </a>
                        </li>
                        
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                <a class="nav-link" href="{{ path('app_produit_index') }}">Produit</a>
                            {% else %}
                                <a class="nav-link" href="{{ path('app_login') }}">Produit</a>
                            {% endif %}
                        </li>
                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <!-- Liens spécifiques pour les administrateurs -->
                            
                            <li class="nav-item">
                            </li>

                            <li class="nav-item">
                            <a class=" btn btn-primary" href="{{ path('app_panier_index') }}"> <i class="fi fi-rr-shopping-cart"></i> Panier </a>
                            </li>
    
                            <!-- D'autres liens admin spécifiques peuvent être ajoutés ici -->
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Admin Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_clientList') }}">Liste des Utilisateurs</a>
                            </li>

                        {% elseif is_granted('ROLE_ADMIN') %}
                        <!-- Liens spécifiques pour les administrateurs -->
                            
                            <li class="nav-item">
                            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                <a class="nav-link" href="{{ path('app_produit_index') }}">Produit</a>
                            {% else %}
                                <a class="nav-link" href="{{ path('app_login') }}">Produit</a>
                            {% endif %}
                            </li>

                            <li class="nav-item">
                            <a class=" btn btn-primary" href="{{ path('app_panier_index') }}"> <i class="fi fi-rr-shopping-cart"></i> Panier </a>
                            </li>
                             
                            <!-- D'autres liens admin spécifiques peuvent être ajoutés ici -->
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                            </li>
                            
                        {% elseif is_granted('ROLE_USER') %}

                        <li class="nav-item">
                            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                <a class="nav-link" href="{{ path('app_produit_index') }}">Produit</a>
                            {% else %}
                                <a class="nav-link" href="{{ path('app_login') }}">Produit</a>
                            {% endif %}
                        </li>

                        <li class="nav-item">
                            <a class=" btn btn-primary" href="{{ path('app_panier_index') }}"> <i class="fi fi-rr-shopping-cart"></i> Panier </a>
                        </li>
                         
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}"> Logout </a>
                        </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}"> Login </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_register') }}"> Register </a>
                            </li>
                        {% endif %}
                        
                        <div class="ms-auto d-flex align-items-center">
                            {% if app.user and app.user.getProfilePicture() %}
                                <img src="{{ asset('uploads/images/profile_pictures/' ~ app.user.getProfilePicture()) }}" class="rounded-circle" style="object-fit: contain" width="40px" height="40px" alt="Photo de profil">
                            {% else %}
                                <i class="fi fi-rr-user"></i>
                                
                            {% endif %}
                            {% if app.user and app.user.username %}
                            <span class="ms-2">{{ app.user.username }}</span>
                            {% endif %}

                            
                            
                        </div>

                    </ul>

                </div>
            </div>
        </nav>
        <div class="container mt-3 ">
            {% for type, messages in app.flashes %}
                {% for msg in messages %}
                    <p class="alert alert-{{type}}">{{msg}}</p>
                {% endfor %}
            {% endfor %}
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
