{% extends 'base.html.twig' %}

{% block title %}{{ 'categorie.title'|trans }}{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <h1 class="card-title">{{ 'categorie.title'|trans }}</h1>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>{{ 'categorie.nom'|trans }}</th>
                        <th>{{ 'contenuPanier.actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                {% for categorie in categories %}
                    <tr>
                        <td>{{ categorie.id }}</td>
                        <td>{{ categorie.nom }}</td>
                        <td class="d-flex flex-row">
                            <a class="btn btn-dark" href="{{ path('app_categorie_edit', {'id': categorie.id}) }}"><i class="fi fi-rr-pencil"></i></a>
                            {{ include('categorie/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">{{ 'contenuPanier.empty'|trans }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
