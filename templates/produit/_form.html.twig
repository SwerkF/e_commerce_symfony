<div class="card my-4">
    <div class="card-header">
        <h2 style="text-align:center" class="mb-0">Cr√©er un nouveau Produit</h2>
    </div>
    {{ form_start(form, {'attr': {'class': 'card-body'}}) }}
        {{ form_row(form.nom, {'attr': {'class': 'form-control mb-3'}}) }}
        {{ form_row(form.description, {'attr': {'class': 'form-control mb-3'}}) }}
        {{ form_row(form.prix, {'attr': {'class': 'form-control mb-3'}}) }}
        {{ form_row(form.stock, {'attr': {'class': 'form-control mb-3'}}) }}
        {{ form_row(form.categorie, {'attr': {'class': 'form-control mb-3'}}) }}
        {{ form_row(form.photo, {'attr': {'class': 'form-control mb-3'}}) }}
        <div class="card-footer bg-transparent border-top-0">
            <button class="btn btn-dark btn-sm">{{ button_label|default('Save') }}</button>
        </div>
    {{ form_end(form) }}
</div>

