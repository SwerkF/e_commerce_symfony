{% extends 'base.html.twig' %}

{% block title %}Votre profile{% endblock %}

{% block body %}

    <h1>Edit Profile</h1>
    {{ form_start(form) }}
    <div class="row">
        <div class="d-flex flex-column align-items-center">
            {% if app.user.getProfilePicture() is not empty %}
                <img src="{{ asset('uploads/images/profile_pictures/' ~ app.user.getProfilePicture()) }}" class="rounded-circle" alt="Profile picture" style="object-fit: contain" width="150px" height="150px"/>
            {% else %}
                <img src="{{ asset('uploads/images/profile_pictures/default.jpg') }}" class="rounded-circle" alt="Profile picture" style="object-fit: contain" width="150px" height="150px"/>
            {% endif %}
            {{ form_row(form.profile_picture) }}
            <div class="username">
                {{ form_row(form.username) }}
            </div>
        </div>
        <div class="d-flex flex-row justify-content-around mt-4">
            <div class="prenom">
                {{ form_row(form.prenom) }}
            </div>
            <div class="nom">
                {{ form_row(form.nom) }}
            </div>
        </div>
        <div class="d-flex flex-row justify-content-around mt-4">
            <div class="email">
                {{ form_row(form.email) }}
            </div>
            <div class="email">
                {{ form_row(form.password) }}
            </div>
        </div>
        <input class="btn btn-primary" type="submit" value="Confirm" />
    </div>
    {{ form_end(form) }}
    


{% endblock %}



