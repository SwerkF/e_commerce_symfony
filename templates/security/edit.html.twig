{% extends 'base.html.twig' %}

{% block title %}{{ 'profile.titlealternative'|trans }}{% endblock %}

{% block body %}

    {{ form_start(form) }}
    <div class="card mt-4">
        <div class="card-header">
            <h1>{{ 'profile.titlealternative'|trans }}</h1>
        </div>
        <div class="card-body">
            <div class="d-flex flex-column align-items-center">
                {% if app.user.getProfilePicture() is not empty %}
                    <img src="{{ asset('uploads/images/profile_pictures/' ~ app.user.getProfilePicture()) }}" class="rounded-circle" alt="Profile picture" style="object-fit: contain" width="300px" height="300px"/>
                {% else %}
                    <img src="{{ asset('uploads/images/profile_pictures/default.jpg') }}" class="rounded-circle" alt="Profile picture" style="object-fit: contain" width="300px" height="300px"/>
                {% endif %}
                {{ form_row(form.profile_picture) }}
                {{ form_errors(form.profile_picture) }}
            </div>
            <div class="d-flex flex-row justify-content-around mt-4 gap-1">
                <div class="col-6">
                    <label for="username">{{ 'profile.username'|trans }}:</label>
                    {{ form_widget(form.username) }}
                    {{ form_errors(form.username) }}
                </div>
                <div class="email col-6">
                    <label for="email">{{ 'profile.email'|trans }}:</label>
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>
            </div>
            <div class="d-flex flex-row justify-content-around mt-4 gap-1">
                <div class="prenom col-6">
                    <label for="email">{{ 'profile.firstname'|trans }}:</label>
                    {{ form_widget(form.prenom) }}
                    {{ form_errors(form.prenom) }}
                </div>
                <div class="nom col-6">
                    <label for="email">{{ 'profile.lastname'|trans }}:</label>
                    {{ form_widget(form.nom) }}
                    {{ form_errors(form.nom) }}
                </div>
            </div>
            <input class="btn btn-dark mt-4 w-100" type="submit" value={{ 'profile.buttonsuccess'|trans }} />
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}



